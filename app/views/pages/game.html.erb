<h1>New game</h1>
<p>Your array : <%= @grid.join %></p>

<form action="/score" >
  <label for="question">Enter your best word</label>
  <input type="text" id="form-inline question" name="query" placeholder="Your word?">
  <input type="hidden" name="grid" value= "<%= @grid %>">
  <input type="hidden" name="start_time" value= "<%= @start_time %>">
  <input type="submit" value="Go on!">
</form>